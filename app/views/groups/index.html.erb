<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>

  <% @groups.each do |group| %>
    <tr>
      <td><%= group.title %></td>
      <td><%= group.description %></td>
      <td><%= link_to 'Show', group_path(group) %></td>
      <td><%= link_to 'Edit', edit_group_path(group) %></td>
    </tr>
  <% end %>
</table>

